{
  "name": "blamegame",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:domain": "VITE_BASE_PATH=/ vite build && node scripts/fix-deployment-paths.js",
    "build:windows-domain": "set VITE_BASE_PATH=/ && vite build && node scripts/fix-deployment-paths.js",
    "build:production": "npm run translate:check && npm run build && npm run verify-build",
    "build:production-windows": "npm run translate:check && npm run build:windows-domain && npm run verify-build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=9999",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "verify-assets": "node scripts/verify-assets.js",
    "verify-build": "node scripts/verify-assets.js --verify-dist",
    "translate": "node scripts/auto-translate.js",
    "translate:dry-run": "node scripts/auto-translate.js --dry-run",
    "translate:check": "node scripts/auto-translate.js --check-only",
    "translate:force": "node scripts/auto-translate.js --no-backup",
    "translate:recover": "node scripts/recover-translations.js",
    "translate:validate": "node scripts/validate-translations.js",
    "version:increment": "node scripts/version-manager.js --increment",
    "version:update": "node scripts/version-manager.js",
    "deploy:verify": "node scripts/verify-deployment.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:foundation": "playwright test --project=foundation-tests",
    "test:classic": "playwright test --project=classic-mode-flows",
    "test:nameblame": "playwright test --project=nameblame-mode-flows",
    "test:components": "playwright test --project=component-tests",
    "test:edge-cases": "playwright test --project=edge-cases",
    "test:performance": "playwright test --project=performance-tests",
    "test:cross-browser": "playwright test --project=cross-browser-firefox --project=cross-browser-webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:accessibility": "playwright test --project=accessibility-tests",
    "test:smoke": "playwright test tests/foundation/app-initialization.spec.ts tests/flows/classic-mode/quick-start.spec.ts",
    "test:full": "playwright test --project=foundation-tests --project=classic-mode-flows --project=nameblame-mode-flows",
    "test:trace": "playwright test --trace=on",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slider": "^1.3.4",
    "@radix-ui/react-switch": "^1.2.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "i18next": "^25.1.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "lucide-react": "^0.507.0",
    "postcss": "^8.5.3",
    "react-feather": "^2.0.10",
    "react-i18next": "^15.5.1",
    "tailwind-merge": "^3.2.0",
    "workbox-window": "^7.3.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/i18next": "^12.1.0",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/react-i18next": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^5.4.19",
    "vite-plugin-pwa": "^1.0.0"
  }
}
